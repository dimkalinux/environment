--tag-relative=yes
--totals=yes
--recurse

--exclude='_darcs'
--exclude='.git'
--exclude='.svn'
--exclude='*/cache/*'
--exclude='*/logs/*'
--exclude='*/data/*'
--exclude='*/build/*'

--regex-PHP
--regex-PHP=/(^|^[^\/*]+[[:blank:]])(abstract[[:blank:]]+)?class[[:blank:]]+([^ ]+)/\3/c/
--regex-PHP=/(^|^[^\/*]+[[:blank:]])(static|abstract|public|protected|private[[:blank:]]+)?(final[[:blank:]]+)?function[[:blank:]]+(\&[[:blank:]]+)?([^ (]+)/\5/f/
--regex-PHP=/(^|^[^\/*]+[[:blank:]])interface[[:blank:]]+([^ ]+)/\2/i/
--regex-PHP=/(^|^[^\/*]+[[:blank:]])(static[[:blank:]]+)?(var|public|protected|private)[[:blank:]]+(static[[:blank:]]+)?\$([[:alpha:]_][[:alnum:]_]*)[[:blank:]]*/\5/v/
--PHP-kinds=cfiv

--python-kinds=-i
