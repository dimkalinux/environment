'./configure' \
'--disable-debug' \
'--enable-inline-optimization' \
'--enable-mbstring' \
'--enable-shared=all' \
'--enable-intl' \
'--enable-pcntl' \
'--enable-soap' \
'--enable-bcmath' \
'--with-zlib' \
'--with-bz2' \
'--with-curl' \
'--with-gd' \
'--with-openssl=/usr' \
'--with-iconv' \
'--with-readline' \
'--with-pdo-mysql=mysqlnd' \
"$@"
